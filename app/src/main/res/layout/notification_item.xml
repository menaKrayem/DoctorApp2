<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/border_notif">

    <ImageView
        android:id="@+id/iv_notif_doc"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/detalis" />


    <LinearLayout
        android:id="@+id/linear_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_notif_doc"
        android:layout_marginStart="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notif_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/doctorName"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_notif_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lorem ipsum dolor sit amet consectetur. Lorem diam pharetra elit."
            android:textColor="@color/textparagrah"
            android:textSize="11sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/linear_notif"
        android:text="10:00 AM"
        android:textColor="@color/gray"
        android:textSize="11sp" />
</RelativeLayout>